	"imports": {
		"@db/sqlite": "jsr:@db/sqlite@^0.12.0",
		"@mathis/turnstile-verify": "jsr:@mathis/turnstile-verify@^1.2.0",
		"@msgpack/msgpack": "npm:@msgpack/msgpack@^3.1.2",
		"@openai/openai": "jsr:@openai/openai@^5.20.1",
